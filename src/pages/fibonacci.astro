---
import Layout from '../layouts/Layout.astro';
import TitlePage from '../components/page/TitlePage.astro'
import SubTitlePage from '../components/page/SubTitlePage.astro';
import ParagraphPage from '../components/page/ParagraphPage.astro'
import ListaCards from '../components/cards/ListaCards.astro';
import CodePage from '../components/CodeJS.astro';
---

<Layout title="Fibonacci | Dev'sCards">

		<article class="mb-6 p-6 m-auto w-11/12 text-blanco bg-newblack rounded-2xl" >

      <section class="mb-4">
        <TitlePage text={"Fibonacci"}/>
        <ParagraphPage text={"Escribe un programa que imprima los 50 primeros números de la sucesión de Fibonacci empezando en 0."}/>
        <SubTitlePage text={"Nota :"}/>
        <ParagraphPage text={"La serie Fibonacci se compone por una sucesión de números en la que el siguiente siempre es la suma de los dos anteriores (0, 1, 1, 2, 3, 5, 8, 13...). "}/>
      </section>

      <section class="mb-4">
        <SubTitlePage text={"Solucion :"}/>
        <CodePage mycode={`
function generadorFibonacci(num){
  let fibo = [0,1]
  
  for(let i = 2; i<=num;i++){
    fibo[i] = fibo[i-1] + fibo[i-2]
  }
  
  return fibo[num]
}

export function Fibonacci(cantidad){
  for(let i=0 ; i<cantidad ; i++){
    console.log(generadorFibonacci(i))
  }
}
        `}/>
      </section>

      <section class="mb-4 ">
        <SubTitlePage text={"Explicacion :"}/>
      </section>

    </article>

    <ListaCards/>


</Layout>
---
import Layout from '../layouts/Layout.astro';
import TitlePage from '../components/page/TitlePage.astro'
import SubTitlePage from '../components/page/SubTitlePage.astro';
import ParagraphPage from '../components/page/ParagraphPage.astro'
import ListaCards from '../components/cards/ListaCards.astro';
import CodePage from '../components/CodeJS.astro';
---

<Layout title="Anagrama | Dev'sCards">

		<article class="mb-6 p-6 m-auto w-11/12 text-blanco bg-newblack rounded-2xl" >

      <section class="mb-4">
        <TitlePage text={"Anagrama"}/>
        <ParagraphPage text={"Escribe una función que reciba dos palabras (String) y retorne si son o no anagramas (Un Anagrama consiste en crear una palabra a partir de la reordenación de las letras de otra palabra)."}/>
        <SubTitlePage text={"Cosas a considerar :"}/>
        <ParagraphPage text={"No hace falta comprobar que ambas palabras existan y dos palabras exactamente iguales no son anagrama."}/>
        <SubTitlePage text={"Nota :"}/>
        <ParagraphPage text={"Dos palabras exactamente iguales no son anagramas."}/>
      </section>

      <section class="mb-4">
          <SubTitlePage text={"Solucion :"}/>
          <CodePage mycode={`
  export function Anagrama(wOne,wTwo){
    wOne= wOne.toLowerCase().split("").sort().join("")
    wTwo= wTwo.toLowerCase().split("").sort().join("")
    if(wOne === wTwo ){
      console.log("son anagramas")    
    }
    if((wOne !== wTwo) || (wOne.length !== wTwo.length)){
      console.log("no son anagramas")    
    }

  }
          `}/>
      </section>

      <section class="mb-4 ">
        <SubTitlePage text={"Explicacion :"}/>
      </section>

    </article>

    <section>
      <ListaCards/>
    </section>

</Layout>

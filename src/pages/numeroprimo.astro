---
import Layout from '../layouts/Layout.astro';
import TitlePage from '../components/page/TitlePage.astro'
import SubTitlePage from '../components/page/SubTitlePage.astro';
import ParagraphPage from '../components/page/ParagraphPage.astro'
import ListaCards from '../components/cards/ListaCards.astro';
import CodePage from '../components/CodeJS.astro';
---

<Layout title="Numero Primo | Dev'sCards">

		<article class="mb-6 p-6 m-auto w-11/12 text-blanco bg-newblack rounded-2xl" >

      <section class="mb-4">
        <TitlePage text={"Numero Primo"}/>
        <ParagraphPage text={"Escribe un programa que se encargue de comprobar si un número es o no primo.Hecho esto, imprime los números primos entre 1 y 100."}/>
      </section>

      <section class="mb-4">
        <SubTitlePage text={"Solucion :"}/>
        <CodePage mycode={`
function GenerarListaPrimos(num){
  if(num==1){
      return num + "no es primo"
    }
  if(num==2){
        return num + "es primo"
    }
  for(let div=2;div<=num/2;div++){
    if(num%div==0){
      return num + "no es primo"
    }
  }
  return num + "es primo"
}
        `}/>
      </section>

      <section class="mb-4 ">
        <SubTitlePage text={"Explicacion :"}/>
      </section>

    </article>

    <ListaCards/>


</Layout>